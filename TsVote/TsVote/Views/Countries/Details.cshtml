@model TsVote.Data.Entities.Gene.Country

@{
    ViewData["Title"] = "Details";
}

<h3>Datalle</h3>
<hr />

<div>
<partial name="_CountryDetail" />

</div>

<div>
    <a asp-action="AddState" asp-route-id="@Model?.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-file-earmark-fill"></i> Agregar Departamento</a> |
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil-fill"></i> Editar país</a> |
    <a asp-action="Index" class="btn btn-sm btn-outline-success"><i class="bi bi-chevron-double-left"></i> Retornar</a>
</div>

<hr/>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Departamento/stados</h3>
            </div>
            <div class="panel-body">

                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.States.FirstOrDefault().Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.States.FirstOrDefault().CityNumber)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.States)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CityNumber)
                                </td>
                                <td>
                                    <a asp-action="EditState" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil-fill"></i>Editar</a> |
                                    <a asp-action="DetailsState" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="bi bi-eye-fill"></i>Detalle</a> |
                                    <a asp-action="DeleteState" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash2-fill"></i>Borrar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/datatable_files.js"></script>
}
